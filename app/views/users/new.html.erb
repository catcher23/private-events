<h3>Sign up</h3>

<%= form_for(:user, url: users_path) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.submit 'Sign up' %>
<% end %>

<h3>Have an account? Sign in</h3>

<%= form_for(:session, url: login_path) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.submit 'Sign in' %>
<% end %>
